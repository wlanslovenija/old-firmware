include /lib/network

setup_interface_if_auto() {
	local cfg="$(find_config "$1")"
	
	# check the autoload setting
	config_get auto "$cfg" auto
	case "$auto" in
		1|on|enabled) setup_interface "$1";;
		*) return 1 ;;
	esac
}

addif() {
	# PPP devices are configured by pppd, no need to run setup_interface here
	case "$INTERFACE" in
		ppp*) return 0;;
	esac

	scan_interfaces
	if setup_interface_if_auto "$INTERFACE"; then
		# Setup interface aliases
		for ifc in $interfaces; do
			config_get dev "$ifc" ifname
			[ "${dev%%:*}" = "$INTERFACE" -a "$dev" != "$INTERFACE" ] && {
				setup_interface_if_auto "$dev"
			}
		done
	fi

	# find all vlan configurations for this interface and set them up as well
	for ifc in $interfaces; do
		config_get iftype "$ifc" type
		config_get ifs "$ifc" device
		for dev in $ifs; do
			[ "${dev%%\.*}" = "$INTERFACE" -a "$dev" != "$INTERFACE" ] && {
				add_vlan "$dev"
			}
		done
	done
}

case "$ACTION" in
	add|register)
		case "$PHYSDEVDRIVER" in
			natsemi) sleep 1;;
		esac
		addif
	;;
esac
